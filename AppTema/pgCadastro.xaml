<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTema.pgCadastro"
             Title="pgCadastro"
             BackgroundColor="{DynamicResource BackgroundColor}">
    <ScrollView>
        <StackLayout Padding="20"
                 VerticalOptions="CenterAndExpand">
            <StackLayout>
                <Label Text="Cadastro" HorizontalOptions="Center" FontSize="36"/>

                <Label Text="Email:"/>
                <Entry x:Name="txtEmail" Placeholder="Email"/>

                <Label Text="Login:" />
                <Entry x:Name="txtUsuario" Placeholder="Usuario"/>

                <Label Text="Senha:" />
                <Entry x:Name="txtSenha"  Placeholder="Senha" IsPassword="True"/>

                <Button Text="Cadastrar"
                            Style="{StaticResource BotaoLoginEstilo}"
                            Clicked="btnCadastrar_Clicked" />

                <Button Text="Voltar"
                                Style="{StaticResource BotaoLoginEstilo}"
                                Clicked="btnVoltar_click"/>

            </StackLayout>
        </StackLayout>
        </ScrollView>
    </ContentPage>